@model Shop.Models.AdminViewModels.OverviewSoldOrderViewModel
@{
    ViewData["Title"] = "Biên lai đã xuất";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    @if (Model.ListOrders == null || !Model.ListOrders.Any())
    {
        <h1 class="text-center mtb-40 color-white">Hiện tại không có hóa đơn!</h1>
    }
    else
    {
        <div class="text-center">
            <h1><i class="fas fa-search"></i> Tìm kiếm theo tên</h1>
            <input onkeyup="searchInTableFunction()" type="text" class="ggg max-width-500px" id="searchInTableTextField" placeholder="Nhập tên của hóa đơn">
        </div>
        <div class="table-agile-info">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Biên lai đã xuất
                </div>
                <div>
                    <table class="table" id="tableToSearch">
                        <thead>
                            <tr>
                                <th>ID đơn hàng</th>
                                <th>Ngày đặt hàng</th>
                                <th>Tổng số tiền</th>
                                <th>Số lượng</th>
                                <th>Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListOrders)
                            {
                            <tr>
                                <td>@item.BillId</td>
                                <td>@item.BillDate.ToString("dd/MM/yyyy")</td>
                                <td>@item.BillTotal.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("vi-vn"))</td>
                                <td>@item.Orders.Count</td>
                                <td>
                                    <a asp-controller="Admin" asp-action="SoldItemsView" asp-route-id="@item.BillId" >
                                        <i class="fas fas fa-ellipsis-h"></i>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</section>
